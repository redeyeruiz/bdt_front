<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogOut">

    <androidx.cardview.widget.CardView
        android:layout_width="264dp"
        android:layout_height="734dp"
        app:cardBackgroundColor="#050505"
        app:cardCornerRadius="25dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameLogOut"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:text="@string/mar_a_fernanda"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#090909"
                android:text="Configuración"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0B0B0B"
                android:text="FAQ"
                android:textAlignment="viewEnd"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:backgroundTint="#020202"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="663dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnExit"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0B0A0A"
                app:srcCompat="@drawable/multiply_48px" />

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:text="Cerrar Sesión"
                android:textAlignment="viewEnd" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>